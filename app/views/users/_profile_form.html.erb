
<div class="container">
  <div class="row">
    <div class="col-md-4"></div>

    <div class="col-md-4">

    <%= form_for @user,html:{multipart:true} do |f| %>

      <div class="form-group">
        <%= f.label :gender %>
        <%= f.text_field :gender, class: "form-control", placeholder: "Male or Female" %>
      </div>

      <div class="form-group">
        <%= f.label :birthdate %>
        <%= f.date_field :dob, class: "form-control", placeholder: "Date of Birth" %>
      </div>

      <div class="form-group">
        <%= f.label :country %>
        <%= f.text_field :country, class: "form-control", placeholder: "Country" %>
      </div>

      <div class="form-group">
        <%= f.label :interests %>
        <%= f.text_field :interest, class: "form-control", placeholder: "Interests" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create New Profile", class:"btn btn-info" %>
      </div>

        <% end %>

      </div>

    <div class="col-md-4"></div>
  </div>
</div>
