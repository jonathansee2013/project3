<div class="container">
  <div class="row">
    <div class="col-md-4"></div>

    <div class="col-md-4">

      <h1 class="text-center">Profile</h1>


        <div class="form-group">
        <p>Photo: <img src="<%= @user.image %>" class="img-thumbnail"> </p>
        </div>

        <div class="form-group">
        <p>Username: <%= @user.username %> </p>
        </div>

        <div class="form-group">
        <p>Gender: <%= @user.gender %> </p>
        </div>

        <div class="form-group">
        <p>Age: <%= @age %> </p>
        </div>

        <div class="form-group">
        <p>Country: <%= @user.country %> </p>
        </div>

        <div class="form-group">
        <p>Interests: <%= @user.interest %> </p>
        </div>

        <div class="form-group">
        <p>Member since <%= @user.created_at.strftime('%-d %-b %Y at %H:%M:%S') %> </p>
        </div>

        <div>
          <%= link_to 'Send Message', new_message_path(@user) %>
        </div>
        <div>
          <% if @current_user == @user || @current_user.is_admin? %>
          <%= link_to 'Edit', edit_user_path(@user) %> |
          <%= link_to 'Delete', user_path(@user), method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
        </div>

        <div>
          <%= link_to 'Back to All Users', users_path %>
        </div>

    </div>

    <div class="col-md-4"></div>

  </div>
</div>
