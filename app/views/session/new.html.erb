<div class="container">
  <h1>Login</h1>
  <form>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
          <%= form_tag(login_path)  do  %>
          <label for="exampleInputEmail1">Email address</label>
          <%= email_field_tag :email, nil, class: "form-control", id: "exampleInputEmail1", placeholder: "Email address" %>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <%=  password_field_tag :password, nil, class: "form-control", id: "exampleInputPassword1", placeholder: "Password" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Login", class: "btn btn-default" %>
        </div>
          <% end %>
          <% if flash[:error].present? %>
            <div>
              <p><%= flash[:error] %></p>
            </div>
          <% end %>
        <div>
          New to us?
          <a href="/users/new">Sign Up</a>
        </div>
      </div> <!-- col-md-6 col-md-offset-3 -->
    </div> <!-- row -->
  </form>
</div> <!--container -->
