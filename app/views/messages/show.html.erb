
<div class="container">

    <div class="row">

      <div class="col-md-2"></div>

      <div class="col-md-8">

        <h1 class="text-center">Message History</h1>

        <% @all_messages.each do |m| %>

        <div>
          <p> <%= m.sender.username %> wrote:</p>
          <p> <%= m.content %> </p>
          <p> Posted: <%= time_ago_in_words(m.created_at) %> ago </p>
          <hr>
        </div>
          <% end %>

      </div>

      <div class="col-md-2"></div>

    </div> <!-- row -->

</div> <!--container -->
