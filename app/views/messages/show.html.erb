
<div class="container">

    <div class="row">

      <div class="col-md-2"></div>

      <div class="col-md-8">

        <h1>Message History</h1>

        <% @all_messages.each do |m| %>

        <div class="rounded">
          <%= m.sender.username %> wrote:
          <p> <%= m.content %> PUBLISHED <%= time_ago_in_words Time.now %> ago.</p>
          <hr>
        </div>
          <% end %>

      </div>

      <div class="col-md-2"></div>

    </div> <!-- row -->

</div> <!--container -->
